<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>

  <metal:block fill-slot="top_slot"
                   tal:define="disable_column_one python:request.set('disable_plone.leftcolumn',1);
                               disable_column_two python:request.set('disable_plone.rightcolumn',1);
                               dummy python:request.set('disable_border',1)" />

  <metal:content-core fill-slot="main"
                      tal:define="contributor view/get_member_data">

    <div class="jumbotron">
      <p class="pull-right"><a class="btn btn-primary btn-lg" role="button">Edit profile</a></p>
      <img class="img-circle"
           tal:attributes="src view/get_member_image" />
    </div>

    <h5>Plone contributor</h5>
    <h1 tal:content="python:contributor.getProperty('fullname')" />
    <h3>Contributing since: 2006</h3>
