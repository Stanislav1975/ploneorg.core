<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>

  <metal:block fill-slot="top_slot"
                   tal:define="disable_column_one python:request.set('disable_plone.leftcolumn',1);
                               disable_column_two python:request.set('disable_plone.rightcolumn',1);
                               dummy python:request.set('disable_border',1)" />

  <metal:content-core fill-slot="main"
                      tal:define="contributor view/get_member_data">

    <div class="jumbotron">
      <p class="pull-right"><a class="btn btn-primary btn-lg" role="button">Edit profile</a></p>
      <div class="row">
        <div class="col-md-4">
          <img class="img-circle"
               tal:attributes="src view/get_member_image">
        </div>
        <div class="col-md-4">
          <ul class="member-info">
            <li tal:define="twitter python:contributor.getProperty('twitter_username')"
                tal:condition="twitter">
              <i class="fa fa-twitter"></i>
              <a tal:attributes="src string:https://twitter.com/${twitter}">
                <span tal:replace="twitter">Twitter username</span>
              </a>
            </li>
            <li tal:define="home_page python:contributor.getProperty('home_page')"
                tal:condition="home_page">
              <i class="fa fa-globe"></i>
              <a tal:attributes="src string:${home_page}">
                <span tal:replace="home_page">Homepage</span>
              </a>
            </li>
            <li tal:define="github python:contributor.getProperty('github_username')"
                tal:condition="github">
              <i class="fa fa-github"></i>
              <a tal:attributes="src string:https://github.com/${github}">
                <span tal:replace="github">GitHub</span>
              </a>
            </li>
        </div>
        <div class="col-md-4">
          <img src="/++theme++ploneorg.theme/img/badges_fake.png" />
        </div>
      </div>
    </div>

    <h5>Plone contributor</h5>
    <h1 tal:content="python:contributor.getProperty('fullname')" />
    <h4>Contributing since: 2006</h4>

    <section class="well clearfix">
        <h2>Activity</h2>
        <h4>First commit: 09.26.2011</h4>
        <article>
          <h5>Summary</h5>
          <div class="fact-data fact-data-info">
            <h1>85</h1>
            <h2>Plone Contributions</h2>
          </div>
          <div class="fact-data fact-data-info">
            <h1>35</h1>
            <h2>Plone Commits</h2>
          </div>
          <div class="fact-data fact-data-info">
            <h1>450</h1>
            <h2>Collective Commits</h2>
          </div>
          <div class="fact-data fact-data-info">
            <h1>20</h1>
            <h2>Mails on list</h2>
          </div>
          <div class="fact-data fact-data-info">
            <h1>9</h1>
            <h2>StackOverflow</h2>
          </div>
          <div class="fact-data fact-data-info">
            <h1>20</h1>
            <h2>Tweets about Plone</h2>
          </div>
        </article>
    </section>

  </metal:content-core>

</body>
</html>
